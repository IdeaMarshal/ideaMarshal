<%= form_tag create_session_path, :id => 'loginForm' do %>
  <p>
    <%= label_tag 'username' %>
    <%= text_field_tag 'username' %>
    <br />
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </p>
  <p>
    <%= submit_tag 'Login', :class => 'btn btn-primary' %>
  </p>
<% end %>